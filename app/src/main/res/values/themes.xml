<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiardeOnAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="background">@color/black</item>
        <item name="colorPrimary">@color/orangered</item>
        <item name="colorPrimaryVariant">@color/bramble</item>
        <item name="colorOnPrimary">@color/orangered</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionOverflowMenuStyle">@style/Overflow</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="Overflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/eternity</item>
        <item name="android:textColor">@color/orangered</item>
    </style>

    <style name="OverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/orangered</item>
        <item name="android:textColor">@color/orangered</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/orangered</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Theme.DiardeOnAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/eternity</item>
    </style>

    <style name="Theme.DiardeOnAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DiardeOnAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>





